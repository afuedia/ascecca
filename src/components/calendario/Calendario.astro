---
import Trimestre from "./trimestre.astro"
const idioma = Astro.currentLocale || "es";
import { useTranslations } from "../../i18n/utils";
const traducciones = useTranslations(idioma as keyof typeof languageList );

---
<div class="calendario">     
  <!-- <p id="year">2025</p> -->
  <div class="calendario__div">
        <Trimestre mesUno={traducciones("mes.uno")} mesDos={traducciones("mes.dos")} mesTres={traducciones("mes.tres")} />
    <Trimestre mesUno={traducciones("mes.cuatro")} mesDos={traducciones("mes.cinco")} mesTres={traducciones("mes.seis")} />
    <Trimestre mesUno={traducciones("mes.siete")} mesDos={traducciones("mes.ocho")} mesTres={traducciones("mes.nueve")} />
    <Trimestre mesUno={traducciones("mes.diez")} mesDos={traducciones("mes.once")} mesTres={traducciones("mes.doce")} />
  </div>
</div> 

