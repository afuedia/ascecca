---
const {src, alt, titulo, fecha, ubicacion, descripcion } = Astro.props;
import { Picture } from "astro:assets";
---

<article>
  <Picture class="img" formats={['avif', 'webp']} src={src} alt={descripcion} />
  <h1>{titulo}</h1>
  <p><time datetime="">{fecha}</time></p>
  <p>{ubicacion}</p>
  <p>{descripcion}</p>
</article>

<style>
  article {
     
    border-radius: 1rem;
    border: solid 1px black;
    overflow: hidden;
    gap: 1rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    @media (min-width: 601px) and (max-width: 1024px) {
      min-width: 35%;
      max-width: 40%;
    } 
    @media (min-width: 1025px) {
      max-width: 32%;
    }
    .img {
      width: 100%;
    }
  }
</style>